{
  "name": "chess",
  "version": "1.0.0",
  "author": "Nate Geslin <teamtomkins23@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "build:client": "browserify -d src/client/app.ts -p [ tsify --noImplicitAny ] | exorcist dist/public/script/bundle.js.map > dist/public/script/bundle.js",
    "build:server": "tsc -p tsconfig.server.json",
    "build:style": "node-sass-chokidar --source-map true src/scss/ -o dist/public/style",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register src/client/**/*.spec.ts",
    "posttest": "nyc report --reporter=lcov --reporter=text-summary",
    "start": "node ./dist/server/index.js"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/coverage/**",
      "**/dist/**",
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "all": false
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/mocha": "^2.2.48",
    "@types/morgan": "^1.7.35",
    "@types/sinon": "^2.3.7",
    "@types/ws": "^6.0.0",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "exorcist": "^1.0.1",
    "mocha": "^4.1.0",
    "nyc": "^11.9.0",
    "sinon": "^4.0.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tsify": "^3.0.3",
    "tslint": "^5.8.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "node-sass-chokidar": "^1.3.3",
    "pug": "^2.0.3",
    "ws": "^6.0.0"
  }
}
